<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="nl.sylvain.cordova.osc"
      version="0.1.0">
    <name>OSC</name>

    <js-module src="www/OSCListener.js" name="OSCListener">
        <clobbers target="window.OSCListener" />
    </js-module>

    <!-- android -->
    <platform name="android">
    	<!-- bind the correct module -->
    	<config-file target="res/xml/config.xml" parent="/*">
            <feature name="OSC" >
                <param name="android-package" value="nl.sylvain.cordova.osc.OSCUtils"/>
            </feature>
        </config-file>

        <!-- allow it to access the network -->
        <config-file target="AndroidManifest.xml" parent="/*">
            <uses-permission android:name="android.permission.INTERNET" />
        </config-file>

        <!-- copy the source files -->
        <source-file src="src/android/OSCUtils.java" target-dir="src/nl/sylvain/cordova/osc" />

        <!-- copy the osc source files -->
		<source-file src="src/android/osc/OSCBundle.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCListener.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCMessage.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCPacket.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCPort.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCPortIn.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/OSCPortOut.java" target-dir="src/com/illposed/osc" />
		<source-file src="src/android/osc/utility/OSCByteArrayToJavaConverter.java" target-dir="src/com/illposed/osc/utility" />
		<source-file src="src/android/osc/utility/OSCJavaToByteArrayConverter.java" target-dir="src/com/illposed/osc/utility" />
		<source-file src="src/android/osc/utility/OSCPacketDispatcher.java" target-dir="src/com/illposed/osc/utility" />
    </platform>

</plugin>